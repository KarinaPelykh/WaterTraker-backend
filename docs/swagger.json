                    "name": {
                      "type": "string",
                      "example": "Jou Doe"
                    },
                    "email": {
                      "type": "string",
                      "example": "test@gmail.com"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/user": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "User information",
        "operationId": "userInfo",
        "description": "Get detailed information about current user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Get information about current user",
            "content": {
              "application/json": {
                "schema": {
