  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "signup": {
        "type": "object",
        "properties": {
          "email": {
            "description": "User email",
            "type": "string",
            "example": "test@gmail.com"
          }
        }
      },
      "user": {
        "type": "object",
        "required": [
          "userInfo"
        ],
        "properties": {
          "userInfo": {
            "type": "object",
            "required": [
              "id",
              "name",
              "email",
              "image",
              "water"
            ],
            "properties": {
              "id": {
                "type": "string",
                "example": "65e4decdd286b30065d54af9"
              },
              "name": {
                "type": "string",
                "example": "John Doe"
              },
              "email": {
                "type": "string",
                "example": "test@gmail.com"
              },
              "image": {
                "type": "string",
                "example": "https://example.com/avatar.jpg"
              },
              "water": {
                "type": "string",
                "example": "1"
              }
            }
          }
        }
      },
      "water": {
        "type": "object",
        "properties": {
          "time": {
            "type": "string",
            "example": "10:20"
          },
          "amount": {
            "type": "number",
            "example": 200
          }
        }
      }
    },
    "responses": {
      "401": {
        "description": "Unauthorized error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "example": "UnauthorizedError"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Access token expired"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
