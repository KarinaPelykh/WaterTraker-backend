              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Image added successfully"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      },
      "patch": {
        "tags": [
          "User"
        ],
        "summary": "Update user avatar",
        "operationId": "updateUserAvatar",
        "description": "Update and set avatar for current user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successfully updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Image updated successfully"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/water-rate": {
      "patch": {
        "tags": [
          "User"
        ],
        "summary": "Update water rate",
        "operationId": "userWaterRate",
        "description": "Update water rate",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "activeTime": {
                    "type": "number",
                    "example": 3
                  },
                  "weight": {
                    "type": "number",
                    "example": 60
                  },
                  "gender": {
                    "type": "string",
                    "example": "female"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successfully updated user information",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "water"
                  ],
                  "properties": {
                    "water": {
                      "type": "number",
                      "example": 2
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/water": {
      "get": {
        "tags": [
          "Water"
        ],
        "summary": "Get all drunk Water",
        "operationId": "getWater",
        "description": "Get all amount drunk Water",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of all drunk water entries",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/water"
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      },
      "post": {
        "tags": [
          "Water"
        ],
        "summary": "Add water",
        "operationId": "addWater",
        "description": "Add amount drunk water",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "amount",
                  "time"
                ],
                "properties": {
                  "amount": {
                    "type": "number",
                    "example": 200
                  },
                  "time": {
                    "type": "string",
                    "example": "10:20"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Add water",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "Success"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/water/{id}": {
      "get": {
        "tags": [
          "Water"
        ],
        "summary": "Get water by Id",
        "operationId": "getWaterById",
        "description": "Get today's consumed water percentage",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the water resource"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "string",
                "required": [
                  "id"
                ],
                "properties": {
                  "id": {
                    "type": "string",
                    "example": "65e4decdd286b30065d54af9"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Get today's consumed water percentage",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "percent",
                    "list"
                  ],
                  "properties": {
                    "percent": {
                      "type": "number",
                      "example": 100
                    },
                    "list": {
                      "type": "array",
                      "items": null,
                      "$ref": "#/components/schemas/water"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      },
      "put": {
        "tags": [
          "Water"
        ],
        "summary": "Update water",
        "operationId": "updatedWaterObject",
        "description": "Update some value in object water",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
