                  "time": {
                    "type": "string",
                    "example": "10:20"
                  },
                  "amount": {
                    "type": "number",
                    "example": 200
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful update",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/water"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      },
      "delete": {
        "tags": [
          "Water"
        ],
        "summary": "Delete water",
        "operationId": "deleteWater",
        "deprecated": false,
        "security": [
          {
            "bearerAuth": []
