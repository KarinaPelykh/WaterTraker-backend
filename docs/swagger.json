{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Water traker",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "This is a documentation of Water traker website"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    },
    {
      "url": "https://example.com/api/v1"
    }
  ],
  "tags": [
    {
      "name": "Water traker",
      "description": "Operations about Water traker."
    },
    {
      "name": "Auth",
      "description": "Auth operations."
    }
  ],
  "paths": {
    "/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "Sign up user",
        "operationId": "signUpUser",
        "description": "Create a new user account",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "email", "password"],
                "properties": {
                  "name": {
                    "description": "User's name",
                    "type": "string",
                    "example": "John Doe"
                  },
                  "email": {
                    "description": "User's email",
                    "type": "string",
                    "example": "test@gmail.com"
                  },
                  "password": {
                    "description": "User's password",
                    "type": "string",
                    "format": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Creates a new user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["message", "data"],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Successfully created a new user!"
                    },
                    "data": {
                      "$ref": "#/components/schemas/signup"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/signin": {
      "post": {
        "tags": ["Auth"],
        "summary": "Sign in a user",
        "operationId": "signInUser",
        "description": "Sign in user account with email password and return JWT token",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "description": "User's email",
                    "type": "string",
                    "example": "test@gmail.com"
                  },
                  "password": {
                    "description": "User's password",
                    "type": "string",
                    "format": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successfully signed in a user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["status", "message", "data"],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully signed in a user!"
                    },
                    "data": {
                      "$ref": "#/components/schemas/signin"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized, invalid email or password",
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/signout": {
      "post": {
        "tags": ["Auth"],
        "summary": "Sign out user from account",
        "operationId": "signout",
        "description": "Sign out user from account",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Sign out user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Successfully signout a user!"
                    },
                    "data": {
                      "$ref": "#/components/schemas/signout"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/current": {
      "get": {
        "tags": ["Auth"],
        "summary": "signin current user without email and password",
        "operationId": "signInCurrentUser",
        "description": "Sign in current user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Get current user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "example": "Jou Doe"
                    },
                    "email": {
                      "type": "string",
                      "example": "test@gmail.com"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/user": {
      "get": {
        "tags": ["User"],
        "summary": "User information",
        "operationId": "userInfo",
        "description": "Get detailed information about current user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Get information about current user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["message", "data"],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "All information about current user"
                    },
                    "data": {
                      "$ref": "#/components/schemas/user"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/user/avatar": {
      "post": {
        "tags": ["User avatar"],
        "summary": "Upload user avatar",
        "operationId": "userAvatar",
        "description": "Upload and set avatar for current user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successfully added",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["message"],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Image added successfully"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      },
      "patch": {
        "tags": ["Update user avatar"],
        "summary": "Update user avatar",
        "operationId": "updateUserAvatar",
        "description": "Update and set avatar for current user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successfully updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["message"],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Image updated successfully"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "signup": {
        "type": "object",
        "properties": {
          "name": {
            "description": "User name",
            "type": "string",
            "example": "Adam Fremen"
          },
          "email": {
            "description": "User email",
            "type": "string",
            "example": "test@gmail.com"
          }
        }
      },
      "signin": {
        "type": "object",
        "properties": {
          "token": {
            "description": "User token",
            "type": "string",
            "example": "jwt_token_here"
          }
        }
      },
      "signout": {
        "type": "object",
        "properties": {
          "message": {
            "example": "Signed out"
          }
        }
      },
      "user": {
        "type": "object",
        "required": ["userInfo"],
        "properties": {
          "userInfo": {
            "type": "object",
            "required": ["id", "name", "email", "image", "water"],
            "properties": {
              "id": {
                "type": "string",
                "example": "65e4decdd286b30065d54af9"
              },
              "name": {
                "type": "string",
                "example": "John Doe"
              },
              "email": {
                "type": "string",
                "example": "test@gmail.com"
              },
              "image": {
                "type": "string",
                "example": "https://example.com/avatar.jpg"
              },
              "water": {
                "type": "string",
                "example": "1"
              }
            }
          }
        }
      }
    },
    "responses": {
      "401": {
        "description": "Unauthorized error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": ["status", "message", "data"],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "example": "UnauthorizedError"
                },
                "data": {
                  "type": "object",
                  "required": ["message"],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Access token expired"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
