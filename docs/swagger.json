    "/water/month/{id}": {
      "get": {
        "tags": [
          "Water"
        ],
        "summary": "Get water month by Id",
        "operationId": "getWaterMonthById",
        "description": "Get water month by Id",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
